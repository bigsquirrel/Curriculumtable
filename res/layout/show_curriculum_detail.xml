<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="10dp">
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/time"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView 
            android:id="@+id/show_curriculum_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:textAppearance="?android:attr/textAppearanceSmall"
           	android:gravity="right" />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/place"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView 
            android:id="@+id/show_curriculum_place"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:textAppearance="?android:attr/textAppearanceSmall"
           	android:gravity="right"/>
    </LinearLayout>
    
     <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/weeks"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView 
            android:id="@+id/show_curriculum_weeks"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="right" />
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/remark"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView 
            android:id="@+id/show_curriculum_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:textAppearance="?android:attr/textAppearanceSmall"
           	android:gravity="right" />
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/signed"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView 
            android:id="@+id/show_curriculum_signed"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:textAppearance="?android:attr/textAppearanceSmall"
           	android:gravity="right" />
    </LinearLayout>
    
</LinearLayout>